
    
{% if node.field_image_carousel is not empty %}
    <div class="photo-gallery">
      <div class="container">
          <h2>Image Gallery</h2>
          <div class="row photos">
          <div id="carouselControls" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img src="{{ file_url(node.field_image_carousel[0].entity.uri.value) }}" class="d-block w-100" alt="{{ node.field_image_carousel[0].alt }}">
            </div>
          {% set imageNo = 0 %}
          {% for image in node.field_image_carousel %}
            <div class="carousel-item">
              <img src="{{ file_url(node.field_image_carousel[imageNo].entity.uri.value) }}" class="d-block w-100" alt="{{ node.field_image_carousel[imageNo].alt }}">
            </div>
          {% set imageNo = imageNo + 1 %}
          {% endfor %}
          </div>
          
          <a class="carousel-control-prev" href="#carouselControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
    </div>
{% endif %}